            <span class="text-sm">Proyectos de transparencia y eficiencia en la gestión de información empresarial.</span>
          </li>
        </ul>
        
      </div>
    </div>
     
  </div>
</div>


<script>
document.addEventListener('DOMContentLoaded', function() {
  function animateCounter(element, start, end, duration) {
    let startTimestamp = null;

    const step = (timestamp) => {
      if (!startTimestamp) startTimestamp = timestamp;
      const progress = Math.min((timestamp - startTimestamp) / duration, 1);
      element.innerText = Math.floor(progress * (end - start) + start);
      if (progress < 1) {
        window.requestAnimationFrame(step);
      } else {
        // Restart the counter
        setTimeout(() => {
          startTimestamp = null;
          window.requestAnimationFrame(step);
        }, 1000); // Optional delay before restarting the counter
      }
    };
    window.requestAnimationFrame(step);
  }

  const counterElement = document.getElementById('counter');
  animateCounter(counterElement, 0, 20, 5000); // Cuenta de 0 a 100 en 5 segundos

  const counterElement1 = document.getElementById('counter1');
  animateCounter(counterElement1, 0, 14, 5000); // Cuenta de 0 a 100 en 5 segundos

  const counterElement2 = document.getElementById('counter2');
  animateCounter(counterElement2, 0, 2, 5000); // Cuenta de 0 a 100 en 5 segundos
});
</script>
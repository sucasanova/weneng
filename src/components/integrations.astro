---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import {
  Slack,
  Zapier,
  Intercom,
  Shopify,
  Messenger,
  Discord,
  Figma,
  Powerbi,
  Office,
  Python,
  Colab
} from "@components/ui/icons";

const integrations = [
  {
    name: "PowerBI",
    description:
      "I specialize in developing interactive dashboards and compelling visualizations that effectively communicate data narratives.",
    Icon: Powerbi,
    link: "#",
  },

  {
    name: "Python",
    description:
      "I have a solid foundation in Python, including object-oriented programming and data manipulation with libraries like NumPy and Pandas.",
    Icon: Python,
    link: "#",
  },

  {
    name: "Data Analitics",
    description:
      "I excel at performing in-depth data analyses using Business Intelligence tools, Stata, and Python.",
    Icon: Intercom,
    link: "#",
  },

  {
    name: "Stata",
    description:
      "I possess expertise in data analysis, statistical testing, and database management for rigorous economic research.",
    Icon: Colab,
    link: "#",
  },

  {
    name: "Figma",
    description: "I am proficient in designing high-quality user interfaces and interactive prototypes in Figma.",
    Icon: Figma,
    link: "#",
  },

  {
    name: "Ofimatica",
    description: "I have advanced proficiency in Microsoft Office and Google Workspace.",
    Icon: Office,
    link: "#",
  },
];
---


    <Sectionhead>
      <Fragment slot="title" >Technical Skills</Fragment>

      <Fragment slot="desc">
        My technical skills have been honed through years of experience and ongoing training.
      </Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 my-24 gap-x-10 gap-y-24">
      {
        integrations.map((item) => (
          <div class="rounded-2xl relative flex items-center flex-col p-6 group bg-white transition ring-2 ring-slate-200/50 shadow hover:ring-slate-200 hover:shadow-md">
            <div class="ring-2 ring-slate-200/50 w-16 h-16 group-hover:ring-slate-200 transition shadow shadow-slate-100 rounded-lg grid place-items-center -mt-16 bg-white">
              <item.Icon class="w-8 h-8" />
            </div>

            <h3 class="text-xl lg:text-2xl font-medium mt-4">{item.name}</h3>
            <p class="text-slate-600 mt-2 text-center [text-wrap:balance]">
              {item.description}
            </p>
            
          </div>
        ))
      }
    </div>


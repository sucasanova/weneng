  }
  {
    Titulo: "Radio Interview - La Fuerza del Consumidor:",
    gif_voceria: "https://media.giphy.com/media/v1.Y2lkPTc5MGI3NjExMnc5NjFzZXNpbTB0OHpucWc2YXRydnlmMGw1ZHdsMms3OW95NjF3eCZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9Zw/7fPFFqRU9SU8N8xpYB/giphy.gif",
